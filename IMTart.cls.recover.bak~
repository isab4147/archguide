\def\@sol{%
	\iftoggle{engl}%
	{Solution{\iftoggle{useby}{\ (By \@by)}{}}:}%
	{ResoluÃ§Ã£o{\iftoggle{useby}{\ (Por \@by)}{}}:}%
}

\renewcommand{\solutiontitle}{\noindent\textbf{\@sol}%
	\def\@by{\relax}%
	\renewcommand{\by}[1]{\gdef\@by{##1}\global\toggletrue{useby}}%
	\global\togglefalse{useby}%
	\par\noindent
}


\newcommand{\extra}[1]{
	\bigskip
	\noindent\begingroup
	\vspace{0.5cm}
	\strut\hspace{-4pt}
	\begin{minipage}{\textwidth}
		\formattitletext{\textlarger{\textbf{#1}}}
%		\strut\newline
%		\rule[1.1ex]{\textwidth}{1.2pt}
	\end{minipage}
	\endgroup
	\vspace{-0.5cm}
}


\renewcommand\appendix{
	\bigskip
	\noindent\begingroup
	\vspace{0.5cm}
	\strut\hspace{-4pt}
	\begin{minipage}{\textwidth}
		\formattitletext{{\iftoggle{engl}{Appendix}{ApÃªndice}}}
		\strut\newline
		\rule[1.1ex]{\textwidth}{1.2pt}
	\end{minipage}
	\endgroup
	\vspace{-0.5cm}
}
