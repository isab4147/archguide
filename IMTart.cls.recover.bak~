%\newtoggle{givecredits}
%\def\@credits{\relax}
\newcommand{\givecredits}{%
		\runningheader{\@examname}
			{\@curpage}
			{\@lecture}
		\runningfooter{\@hwtype}{}{\iftoggle{engl}{By \@author}{Por \@author}}
		\runningfootrule
}

\runningfooter{}{}{}
\runningheader{
	\ifthenelse{\equal{\@hwtype}{}}
	{\@examname{ }}
	{\@hwtype}
}{%
	\ifthenelse{\equal{\@hwtype}{}}
	{}
	{\@examname{ - }}%
	\@curpage}{\@lecture}

\runningheadrule

